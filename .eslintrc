{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "mocha": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "parser": "babel-eslint",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended"
    ],
    "rules": {
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "baseIndent": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "no-var": "error",
        "valid-jsdoc": "error",
        "require-jsdoc": [
            "error",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": false,
                    "ClassDeclaration": false,
                    "ArrowFunctionExpression": false,
                    "FunctionExpression": false
                }
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": false,
                "variables": true
            }
        ],
        "guard-for-in": "error",
        "strict": [
            "error",
            "global"
        ],
        "camelcase": "error",
        "dot-notation": "error",
        "indent": [
            "error",
            4
        ],
        "no-debugger": 1
    }
}
